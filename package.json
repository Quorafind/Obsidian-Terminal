{
	"name": "terminal",
	"version": "0.2.0",
	"description": "Integrated terminal view for Obsidian using ghostty-web and node-pty",
	"main": "main.js",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"build:all": "npm run rebuild:electron && npm run build",
		"rebuild:electron": "node scripts/fix-electron-headers.mjs && node scripts/fix-winpty-cc.mjs && node scripts/fix-conpty-cc.mjs && npx @electron/rebuild -m node_modules/node-pty -v 37.10.2 && node scripts/copy-node-pty-binaries.mjs",
		"rebuild:headers": "node scripts/fix-electron-headers.mjs",
		"rebuild:winpty": "node scripts/fix-winpty-cc.mjs",
		"rebuild:native": "npx @electron/rebuild -m node_modules/node-pty -v 37.10.2",
		"rebuild:copy": "node scripts/copy-node-pty-binaries.mjs",
		"embed": "node scripts/embed-native-modules.mjs",
		"lint:check": "eslint src --ext .ts --max-warnings 0 || exit 0",
		"clean": "node -e \"const fs=require('fs'); ['main.js','main.js.map','styles.css'].forEach(f=>fs.existsSync(f)&&fs.unlinkSync(f))\"",
		"prebuild": "npm run clean",
		"version": "node version-bump.mjs && git add manifest.json versions.json"
	},
	"keywords": [
		"obsidian",
		"terminal",
		"pty",
		"xterm"
	],
	"author": "Boninall",
	"license": "MIT",
	"dependencies": {
		"@xterm/addon-clipboard": "^0.1.0",
		"@xterm/addon-fit": "^0.10.0",
		"@xterm/addon-image": "^0.8.0",
		"@xterm/addon-search": "^0.15.0",
		"@xterm/addon-serialize": "^0.13.0",
		"@xterm/addon-unicode11": "^0.8.0",
		"@xterm/addon-web-links": "^0.11.0",
		"@xterm/addon-webgl": "^0.18.0",
		"@xterm/xterm": "^5.5.0",
		"ghostty-web": "^0.3.0",
		"node-pty": "^1.0.0"
	},
	"devDependencies": {
		"@electron/rebuild": "^4.0.1",
		"@release-it/conventional-changelog": "^9.0.0",
		"@types/node": "^16.11.6",
		"@typescript-eslint/eslint-plugin": "5.29.0",
		"@typescript-eslint/parser": "5.29.0",
		"builtin-modules": "3.3.0",
		"esbuild": "0.14.47",
		"obsidian": "^1.10.0",
		"release-it": "^18.0.0",
		"tslib": "2.4.0",
		"typescript": "4.7.4"
	}
}
